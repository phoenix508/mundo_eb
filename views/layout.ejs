    <style>
        body {
            background-color: #1a1a1a;
            color: white;
        }

        .card-zoom {
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
            border-radius: 1rem;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .card-zoom-image {
            position: absolute;
            width: 100%;
            height: 100%;
            transition: all 500ms ease-in-out;
            transform: scale(1);
            background-position: center;
            background-size: cover;
        }

        .card-zoom-text {
            position: absolute;
            font-size: 3rem;
            font-weight: 900;
            transition: all 500ms ease-in-out;
            transform: scale(1.5);
            color: rgb(249 250 251);
            opacity: 0.6;
        }

        .card-zoom:hover .card-zoom-image {
            transform: scale(1.5);
        }

        .card-zoom:hover .card-zoom-text {
            transform: scale(1);
            opacity: 1;
        }

        /* Background images for destination cards */
        .bg-beijing {
            background-image: url('https://cdn.pixabay.com/photo/2022/08/06/02/24/temple-of-heaven-7367827_960_720.jpg');
        }

        .bg-paris {
            background-image: url('https://images.unsplash.com/photo-1502602898657-3e91760cbb34?auto=format&fit=crop&w=800');
        }

        .bg-kyoto {
