<div class="pt-24">
    <!-- Gallery Header -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-white mb-4">Travel Gallery</h1>
        <p class="text-gray-300">Explore our collection of stunning destinations</p>
    </div>

    <!-- Gallery Grid -->
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Gallery Items -->
            <% galleryImages.forEach(image => { %>
                <div class="group relative overflow-hidden rounded-2xl">
                    <img 
                        src="<%= image.url %>" 
                        alt="<%= image.title %>"
                        class="w-full h-[300px] object-cover transform transition-transform duration-500 group-hover:scale-110"
                    >
                    <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <div class="absolute bottom-0 left-0 right-0 p-6">
                            <h3 class="text-white text-xl font-bold"><%= image.title %></h3>
                            <p class="text-gray-300"><%= image.location %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <div class="text-center mt-12">
        <button onclick="window.open('https://www.youtube.com/@themundotravel', '_blank')" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">View Our Videos on YouTube</button>
    </div>
</div> 